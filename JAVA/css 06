// Para crear un ArrayList de tipo int, rellenarlo con elementos 1..10, 
// eliminar los n√∫meros pares y mostrar el resultado final
ArrayList<Integer> numeros = new ArrayList<>();

for (int i = 1; i <= 10; i++) {
    numeros.add(i);
}

for (int i = numeros.size() - 1; i >= 0; i--) {
    if (numeros.get(i) % 2 == 0) {
        numeros.remove(i);
    }
}

for (int numero : numeros) {
    System.out.println(numero);
}
